<style>
  .decor {
    font-family: "Access";
    writing-mode: vertical-rl;
    text-orientation: upright;
    color: #333333;
    font-size: 4rem;
    text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  }

  .aces {
    transform: scaleX(-1);
  }

  @media (min-width: 768px) {
    .decor {
      font-size: 6rem;
    }
  }

  .main-h1 {
    font-family: "Access";
    writing-mode: horizontal-tb;
    text-orientation: upright;
    transform: scaleY(-1);
  }
</style>

<script>
